<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/backgroundImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/logoImage" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
            android:fontFamily="@font/montserrat" android:textSize="16dp" android:textColor="@color/colorAccent"
            android:background="@drawable/shoosh_button" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Desired League"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textAlignment="center"
            android:fontFamily="@font/montserrat" android:textSize="18dp" android:textColor="@color/colorAccent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/logoImage"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:id="@+id/buttonsLayout">
        <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menLeagueButton" android:textOn="Men's" android:textOff="Men's"
                android:textColor="@color/colorAccent" android:background="@drawable/swoosh_toggle"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/womenLeagueButton"
                android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:textOff="Women's"
                android:textOn="Women's" android:textColor="@color/colorAccent"
                android:background="@drawable/swoosh_toggle"/>
        <ToggleButton
                android:text="ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/coEdButton" android:textOff="Co-ed's"
                android:textOn="Co-ed's" android:textColor="@color/colorAccent"
                android:background="@drawable/swoosh_toggle"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>